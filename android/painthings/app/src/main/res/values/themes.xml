<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Painthings" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="PopupBarChart">
        <!--Chart bar attributes-->
        <attr name="chart_bar_start_color" format="color" />
        <attr name="chart_bar_end_color" format="color" />
        <attr name="chart_bar_round_corner" format="boolean" />
        <attr name="chart_bar_size" format="dimension" />
        <attr name="chart_bar_secondary_color" format="color" />

        <!--Chart bar bottom text attributes-->
        <attr name ="chart_bar_text_color" format="reference"/>
        <attr name ="chart_bar_text_size" format="dimension"/>
        <attr name="chart_bar_text_family" format="reference"/>

        <!--Tooltip attributes-->
        <attr name="chart_bar_tooltip_bg_color" format="reference" />
        <attr name="chart_bar_tooltip_title_text_color" format="reference" />
        <attr name="chart_bar_tooltip_title_text_size" format="dimension" />
        <attr name="chart_bar_tooltip_title_text_family" format="reference" />
        <attr name="chart_bar_tooltip_subtitle_text_color" format="reference" />
        <attr name="chart_bar_tooltip_subtitle_text_size" format="dimension" />
        <attr name="chart_bar_tooltip_subtitle_text_family" format="reference" />

    </declare-styleable>
</resources>